<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'fields', :f => f %> 

  <div  class="actions">
    <%= f.submit "Update" %>
  </div>

  <% end %>

<div>
  <%= gravatar_for @user %>
  <!--  "target=_blank"  means open page as a new tab on the browser -->
  <a href="http://gravatar.com/emails" target=_blank>change</a>
</div>